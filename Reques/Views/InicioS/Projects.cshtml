@model Reques.Models.Mprojects
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_InicioN.cshtml";
}

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Projects</title>
</head>
<body>
    <div class="body-content">
        <ul>
            <li><img src="~/Content/images/logo_transparent.png" /></li>
            <li class="header"><b>Projects</b></li>
            <li class="header"><a href="/InicioS/CreateProject">Create Project</a></li>
            <li class="header"><a href="/InicioS/CreateRequirement">Create Requirement</a></li>
            <li class="header"><a href="/InicioS/CreateActivity">Create Activity</a></li>
        </ul>
    </div>

    <div class="projectRequirementsHeader">
        <h2>Proyectos</h2>
    </div>

    <div class="projectImages">

        @for (int index = 0; index < Model.proyectos.Count; index++)
        {
            var l = Model.proyectos[index];

            <div class="projectDiv">
                <a href="/InicioS/ProjectRequirements/@l[1]">Ver Proyecto</a>
                <p>@l[0]</p>
            </div>
        }

    </div>

    <div class="projectRequirementsDiv">

        @for (int index = 0; index < Model.actividades.Count; index++) {
            var l = Model.actividades[index];

            <div class="projectTicketDiv" onclick="location.href='/InicioS/ActivityView/@l[1]';">
                <p>@l[0]</p>
            </div>
        }

    </div>

</body>
</html>

