@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_InicioN.cshtml";


}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
</head>
<body class="modalPage">

    <div id="parent">
        <form id="form_login">

            <div class="form-header">
                <h2><b>Sign Up</b></h2>
            </div>

            <div class="form-item">
                <label for="fname">Name</label><br />
                <input type="text" id="fname" name="name" placeholder="Name.."><br />
            </div>

            <div class="form-item">
                <label for="pname">Last Name</label><br />
                <input type="text" id="pname" name="lastname" placeholder="Last Name.."><br />
            </div>

            <div class="form-item">
                <label for="uname">Email</label><br />
                <input type="text" id="uname" name="email" placeholder="Email.."><br />
            </div>

            <div class="form-item">
                <label for="lname">Password</label><br />
                <input type="text" id="lname" name="password" placeholder="Password.."><br />
            </div>

            <input class="loginAndSignUpButtons" type="submit" value="Sign Up">
        </form>
    </div>
    @section scripts {
        <script>
        $(document).ready(function () {
            $("#form_login").submit(function (e) {
                e.preventDefault();
                url = "@Url.Content("~/InicioS/InsertaU")"
                parametros = $(this).serialize();

                $.post(url, parametros, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/InicioS/Iniciar")"
                    }
                    else {
                        alert(data)

                    }

                })


            })
        })
        </script> }


</body>
</html>

