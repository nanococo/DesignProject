@model Reques.Models.ConcreteRequirements

@{
    ViewBag.Title = "RequirementView";
    Layout = "~/Views/Shared/_InicioN.cshtml";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Requirements</title>
</head>
<body>

    <div class="body-content">
        <ul>
            <li><img src="~/Content/images/logo_transparent.png"/></li>
            <li class="header"><b>@Model.requerimiento[0][0]</b></li>
        </ul>

    </div>

    <div style="width: 100%; margin-top: 100px">
        <div class="requirementDivLeft">
            <p><b>Description</b></p>
            <p>@Model.requerimiento[0][1]</p>

        </div>
        <div class="requirementDivRight">
            <input class="loginAndSignUpButtons" type="button" value="Progress">
            <p><b>Assignee</b></p>
            <p><b>Reporter</b></p>

            <div class="activityDiv">
                <p>Activities</p>

                <div class="ticketDiv" onclick="location.href='/InicioS/ActivityView';">
                    <p>Ticket 1</p>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

