@model Reques.Models.ConcreteRequirements

@{
    ViewBag.Title = "RequirementView";
    Layout = "~/Views/Shared/_InicioN.cshtml";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Requirements</title>
</head>
<body>

    <div class="body-content">
        <ul>
            <li><img src="~/Content/images/logo_transparent.png"/></li>
            <li class="header"><b>Requirement @Model.requerimiento[0][3] - @Model.requerimiento[0][0]</b></li>
        </ul>

    </div>

    <div style="width: 100%; margin-top: 100px">

        <div class="requirementDivLeft">
            <h2><b>Name</b></h2><br />
            <p>@Model.requerimiento[0][1]</p>
            <br />
            <br />
            <h2><b>Description</b></h2><br />
            <p>@Model.requerimiento[0][2]</p>

        </div>
        <div class="requirementDivRight">
            <p><b>State: </b></p><br />
            <input class="stateBtn" type="button" value="@Model.requerimiento[0][6]">
            <br />
            <br />
            <p><b>Assignee: </b> @Model.requerimiento[0][4] </p><br />
            <br />
            <p><b>Reporter: </b> @Model.requerimiento[0][5] </p><br />
            <br />
            <p><b>Requirement Type: </b> @Model.requerimiento[0][7] </p><br />

            <div class="activityDiv">
                <p>Activities</p>

                @for (int index = 0; index < Model.actividades.Count; index++) {
                    var l = Model.actividades[index];

                    <div class="ticketDiv" onclick="location.href='/InicioS/ActivityView/@l[1]';">
                        <p>@l[0]</p>
                    </div>
                }

            </div>
        </div>
    </div>


</body>
</html>

